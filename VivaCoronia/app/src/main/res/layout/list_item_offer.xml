<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="offer"
            type="de.tudarmstadt.iptk.foxtrot.vivacoronia.trading.OfferViewModel" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:background="@drawable/border"
        android:orientation="horizontal"
        android:padding="15dip">

        <ImageView
            android:id="@+id/expand_arrow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/ic_expand_arrow"
            android:contentDescription="@string/expand_arrow"
            app:expandArrowRotation="@{offer}" />

        <TextView
            android:id="@+id/product_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:singleLine="true"
            android:textSize="24sp"
            android:text="@{offer.offer.productName}" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:textAlignment="viewEnd"
            android:text="@{Integer.toString(offer.offer.amount)}"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_weight="0.03"
            android:layout_height="match_parent"
            android:contentDescription="@string/clear"
            android:scaleType="fitEnd"
            android:src="@drawable/ic_clear" />
    </LinearLayout>
</layout>
