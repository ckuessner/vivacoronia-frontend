<layout>

    <data>

        <variable
            name="question"
            type="de.tudarmstadt.iptk.foxtrot.vivacoronia.quiz.models.Question" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        tools:context="de.tudarmstadt.iptk.foxtrot.vivacoronia.quiz.QuizQuestionActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/border_round"
            android:backgroundTint="@color/colorAccent"
            android:padding="5dp"
            android:text="@{question.questionText}"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/answer_0"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/border_round"
            android:gravity="center"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:text="@{question.answers[0]}"
            android:textAlignment="center"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/answer_1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/border_round"
            android:gravity="center"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:text="@{question.answers[1]}"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/answer_2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/border_round"
            android:gravity="center"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:text="@{question.answers[2]}"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/answer_3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/border_round"
            android:gravity="center"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:text="@{question.answers[3]}"
            android:textAlignment="center" />

    </LinearLayout>
</layout>