<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:id="@+id/update_infection_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:stretchColumns="1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <TextView
                    android:id="@+id/infection_status_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="3dip"
                    android:text="@string/infection_status" />

                <TextView
                    android:id="@+id/infection_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="end"
                    android:padding="3dip"
                    android:text="@string/unknown" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <TextView
                    android:id="@+id/infection_date_approx_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="3dip"
                    android:text="@string/infection_date_approx" />

                <TextView
                    android:id="@+id/infection_date_approx"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="end"
                    android:padding="3dip"
                    android:text="@string/unknown" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <TextView
                    android:id="@+id/test_date_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="3dip"
                    android:text="@string/test_date" />

                <TextView
                    android:id="@+id/test_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="end"
                    android:padding="3dip"
                    android:text="@string/unknown" />
            </TableRow>
        </TableLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ProgressBar
                android:id="@+id/upload_infection_status_progress_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="visible" />

            <ImageView
                android:contentDescription="@string/update_successful"
                android:id="@+id/update_infection_status_success"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/upload_infection_status_progress_bar"
                android:layout_alignBottom="@id/upload_infection_status_progress_bar"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_check_circle_green_24dp" />

            <ImageView
                android:contentDescription="@string/update_failed"
                android:id="@+id/update_infection_status_failed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/upload_infection_status_progress_bar"
                android:layout_alignBottom="@id/upload_infection_status_progress_bar"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_failed_red_24dp" />
        </RelativeLayout>

        <Button
            android:id="@+id/upload_infection_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/upload_infection_status_button" />

    </LinearLayout>
</LinearLayout>