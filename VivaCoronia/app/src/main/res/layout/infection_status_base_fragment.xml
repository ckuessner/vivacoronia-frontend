<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="infectionStatusData"
            type="de.tudarmstadt.iptk.foxtrot.vivacoronia.infectionStatus.InfectionStatusViewModel" />
    </data>

    <ScrollView xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".infectionStatus.InfectionStatusBaseFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/update_infection_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dip"
                android:paddingRight="15dip"
                android:paddingLeft="15dip"
                android:stretchColumns="1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/infection_status_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:padding="3dip"
                        android:text="@string/infection_status" />

                    <TextView
                        android:id="@+id/infection_status"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="end"
                        android:padding="3dip"
                        android:text="@{infectionStatusData.newStatus}" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/infection_date_approx_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:padding="3dip"
                        android:text="@string/infection_date_approx" />

                    <TextView
                        android:id="@+id/infection_date_approx"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="end"
                        android:padding="3dip"
                        android:text="@{infectionStatusData.occuredDateEstimationString}" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/test_date_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:padding="3dip"
                        android:text="@string/test_date" />

                    <TextView
                        android:id="@+id/test_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="end"
                        android:padding="3dip"
                        android:text="@{infectionStatusData.dateOfTestString}" />
                </TableRow>
            </TableLayout>

            <TableLayout
                android:id="@+id/update_infection_table_additional"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dip"
                android:paddingRight="15dip"
                android:paddingLeft="15dip"
                android:stretchColumns="1"/>
        </LinearLayout>
    </ScrollView>
</layout>

