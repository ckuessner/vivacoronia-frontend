<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="infectionStatusData"
            type="de.tudarmstadt.iptk.foxtrot.vivacoronia.infectionStatus.InfectionStatusViewModel" />

        <variable
            name="textColor"
            type="int" />
    </data>

    <ScrollView xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        tools:context=".infectionStatus.InfectionStatusBaseFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/infection_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:contentDescription="@string/infection_status"
                    app:srcCompat="@drawable/ic_check" /> <!--TODO icon-->

                <TextView
                    android:id="@+id/infection_status_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/infection_icon"
                    android:padding="3dp"
                    android:text="@string/infection_status"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/infection_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/infection_status_label"
                    android:layout_toEndOf="@id/infection_icon"
                    android:padding="3dp"
                    android:text="@{infectionStatusData.newStatus}"
                    android:textColor="@{textColor}"
                    android:textSize="24sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:background="@android:color/darker_gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/approx_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:contentDescription="@string/infection_date_approx"
                    app:srcCompat="@drawable/ic_check" /> <!--TODO icon-->

                <TextView
                    android:id="@+id/infection_date_approx_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/approx_icon"
                    android:padding="3dp"
                    android:text="@string/infection_date_approx"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/infection_date_approx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/infection_date_approx_label"
                    android:layout_toEndOf="@id/approx_icon"
                    android:padding="3dp"
                    android:text="@{infectionStatusData.occuredDateEstimationString}"
                    android:textColor="@{textColor}"
                    android:textSize="24sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:background="@android:color/darker_gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/test_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:contentDescription="@string/test_date"
                    app:srcCompat="@drawable/ic_check" /> <!--TODO icon-->

                <TextView
                    android:id="@+id/test_date_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/test_icon"
                    android:padding="3dp"
                    android:text="@string/test_date"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/test_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/test_date_label"
                    android:layout_toEndOf="@id/test_icon"
                    android:padding="3dp"
                    android:text="@{infectionStatusData.dateOfTestString}"
                    android:textColor="@{textColor}"
                    android:textSize="24sp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/additional_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </LinearLayout>
    </ScrollView>
</layout>

