<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:padding="20dp">

            <LinearLayout
                android:id="@+id/my_score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/you"
                    android:textAlignment="center"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/my_correct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="20dp"
                    android:textAlignment="center"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/my_answer_0"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginHorizontal="35dp"
                    android:layout_marginVertical="20dp"
                    android:background="@drawable/border_round_3dp"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/my_answer_1"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginHorizontal="35dp"
                    android:layout_marginVertical="20dp"
                    android:background="@drawable/border_round_3dp"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/my_answer_2"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginHorizontal="35dp"
                    android:layout_marginVertical="20dp"
                    android:background="@drawable/border_round_3dp"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/my_answer_3"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginHorizontal="35dp"
                    android:layout_marginVertical="20dp"
                    android:background="@drawable/border_round_3dp"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/opponent_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/opponent"
                    android:textAlignment="center"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/opponent_correct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="20dp"
                    android:textAlignment="center"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/opponent_answer_0"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginHorizontal="35dp"
                    android:layout_marginVertical="20dp"
                    android:background="@drawable/border_round_3dp"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/opponent_answer_1"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginHorizontal="35dp"
                    android:layout_marginVertical="20dp"
                    android:background="@drawable/border_round_3dp"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/opponent_answer_2"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginHorizontal="35dp"
                    android:layout_marginVertical="20dp"
                    android:background="@drawable/border_round_3dp"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/opponent_answer_3"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginHorizontal="35dp"
                    android:layout_marginVertical="20dp"
                    android:background="@drawable/border_round_3dp"
                    tools:ignore="ContentDescription" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/placeholder"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/play"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:layout_marginBottom="30dp"
            android:text="@string/play" />

    </LinearLayout>
</layout>