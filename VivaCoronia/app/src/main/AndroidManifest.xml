<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.tudarmstadt.iptk.foxtrot.vivacoronia">
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <service
            android:name=".locationTracking.LocationTrackingService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="location"
            android:description="@string/location_service_description_manifest">
        </service>

        <service
            android:name=".periodicLocationUpload.UploadService"
            android:exported="false">
        </service>

        <receiver
            android:name=".periodicLocationUpload.AlarmBroadcastReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <!-- activities here and first has to be main activity -->
        <activity android:name=".mainActivity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".infectionStatus.InfectionStatusActivity"
            android:label="Current Infection Status"
            android:parentActivityName=".mainActivity.MainActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".mainActivity.MainActivity"/>
        </activity>

        <activity android:name=".infectionStatus.ScanQrCodeActivity"
            android:label="Scan QR-Code"
            android:parentActivityName=".infectionStatus.InfectionStatusActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".infectionStatus.InfectionStatusActivity"/>
        </activity>

        <activity
            android:name=".infectionStatus.UpdateInfectionActivity"
            android:label="@string/update_infection_label"
            android:parentActivityName=".mainActivity.MainActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".mainActivity.MainActivity"/>
        </activity>

    </application>

</manifest>